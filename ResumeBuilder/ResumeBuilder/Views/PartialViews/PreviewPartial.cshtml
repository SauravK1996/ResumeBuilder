<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" id="modal-style" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <b class="modal-font-size" id="modalUserName"></b><br />
                <b class="modal-font-size" id="modalUserPhone"></b><br />
                <b class="modal-font-size" id="modalUserEmail"></b><br />
                <b class="modal-font-size" id="modalSkills">Skills:</b><br />
                <b class="modal-font-size">Projects:</b><br />
                <b class="modal-font-size">Work Experience:</b><br />
                <b class="modal-font-size">Language:</b><br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/preview.css">
    @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-lumen-v3.css">*@
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
</head>
<div class="preview-card" data-toggle="modal" data-target="#exampleModal">
    <div class="preview-text">Preview</div>
    @*<i class="glyphicon glyphicon-plus plus-symbol"></i>*@
</div>

